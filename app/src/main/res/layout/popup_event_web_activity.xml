<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_000000">

    <LinearLayout
        android:id="@+id/web_view_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <WebView
            android:id="@+id/web_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scrollbarStyle="outsideOverlay" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/close_img"
        android:layout_width="@dimen/_48_dp"
        android:layout_height="@dimen/_48_dp"
        android:layout_alignParentRight="true"
        android:adjustViewBounds="true"
        android:background="@null"
        android:src="@drawable/btn_delete_06" />

    <CheckBox
        android:id="@+id/web_check"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_25_dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_27_dp"
        android:button="@drawable/cb_popup_info"
        android:paddingLeft="@dimen/_13_dp"
        android:text="@string/not_look_a_day"
        android:textColor="@color/color_ffffff"
        android:textSize="@dimen/_14_dp" />

</RelativeLayout>
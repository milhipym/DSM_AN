<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/m_login_bg">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_top"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_middle_one"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.2" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_middle_two"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_bottom"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="1.0" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_logo_img"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/guide_top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/intro_top_logo"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            app:layout_constraintBottom_toBottomOf="@+id/main_logo_img"
            app:layout_constraintEnd_toEndOf="@+id/main_logo_img"
            app:layout_constraintStart_toStartOf="@+id/main_logo_img"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/t_ci" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 로그인 레이아웃 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/out_login_layout"
        android:layout_width="300dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:maxHeight="280dp"
        android:minHeight="280dp"
        app:layout_constraintBottom_toTopOf="@+id/guide_middle_two"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guide_middle_one">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/login_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/_1_dp"
            android:background="@drawable/border_shadow_round"
            android:orientation="vertical"
            android:paddingLeft="@dimen/_24_dp"
            android:paddingRight="@dimen/_24_dp"
            android:paddingBottom="@dimen/_23_dp"
            app:layout_constraintVertical_weight="0.9"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/login_info"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >

            <ImageView
                android:id="@+id/top_portal_logo_tv"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_10_dp"
                android:scaleType="center"
                app:srcCompat="@drawable/m_db_title"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:id="@+id/top_login_tv"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/_10_dp"
                android:text="로그인"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/_17_dp"
                android:textStyle="normal"
                app:layout_constraintTop_toBottomOf="@+id/top_portal_logo_tv"
                app:layout_constraintStart_toStartOf="parent"
                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/edit_text_layout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@+id/top_login_tv"
                app:layout_constraintBottom_toTopOf="@id/terms_location_layout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@null"
                    android:orientation="vertical"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    >

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/id_layout"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:background="@color/color_ffffff"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toTopOf="@+id/passwd_layout"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent">

                        <com.dongbu.dsm.widget.BackKeyEditText
                            android:id="@+id/id_edit"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:hint="아이디를 입력하세요"
                            android:imeOptions="actionDone"
                            android:inputType="textEmailAddress"
                            android:maxLength="8"
                            android:singleLine="true"
                            android:textColor="@color/color_666666"
                            android:textColorHint="@color/color_999999"
                            android:textSize="15dp"
                            android:layout_marginLeft="5dp"
                            app:layout_constraintHorizontal_weight="0.8"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/id_delete_btn"
                            app:layout_constraintBottom_toBottomOf="parent"
                            />

                        <ImageButton
                            android:id="@+id/id_delete_btn"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:adjustViewBounds="true"
                            android:background="@null"
                            android:visibility="visible"
                            app:layout_constraintHorizontal_weight="0.2"
                            app:srcCompat="@drawable/icon_delete_black"
                            app:layout_constraintTop_toTopOf="@+id/id_edit"
                            app:layout_constraintBottom_toBottomOf="@+id/id_edit"
                            app:layout_constraintStart_toEndOf="@+id/id_edit"
                            app:layout_constraintEnd_toEndOf="parent"
                            />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/passwd_layout"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="@dimen/_5_dp"
                        android:background="@color/color_ffffff"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toBottomOf="@+id/id_layout"
                        app:layout_constraintBottom_toTopOf="@+id/loginbtn_layout"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        >


                        <EditText
                            android:id="@+id/passwd_edit"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:clickable="true"
                            android:hint="비밀번호를 입력하세요"
                            android:inputType="textPassword"
                            android:singleLine="true"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/color_666666"
                            android:textColorHint="@color/color_999999"
                            android:textSize="15dp"
                            android:visibility="visible"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/passwd_delete_btn"
                            />

                        <HorizontalScrollView
                            android:id="@+id/keyscroll"
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/_20_dp"
                            android:layout_marginRight="@dimen/_33_dp"
                            android:clickable="true"
                            android:fillViewport="true"
                            android:scrollbars="horizontal"
                            android:visibility="gone">

                            <LinearLayout
                                android:id="@+id/keylayout"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:focusable="false"
                                android:orientation="horizontal"></LinearLayout>
                        </HorizontalScrollView>

                        <ImageButton
                            android:id="@+id/passwd_delete_btn"
                            android:layout_width="@dimen/_50_dp"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:background="@null"
                            android:contentDescription="@string/transkey_clear_all"
                            android:visibility="gone"
                            app:srcCompat="@drawable/icon_delete_black"
                            app:layout_constraintTop_toTopOf="@+id/passwd_edit"
                            app:layout_constraintBottom_toBottomOf="@+id/passwd_edit"
                            app:layout_constraintStart_toEndOf="@+id/passwd_edit"
                            app:layout_constraintEnd_toEndOf="parent"
                            />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/loginbtn_layout"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="@dimen/_5_dp"
                        android:background="@color/color_ffffff"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toBottomOf="@+id/passwd_layout"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        >
                        <Button
                            android:id="@+id/login_btn"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:background="@drawable/background_2_5_6fac8b"
                            android:text="@string/login"
                            android:textColor="@color/color_50ffffff"
                            android:textSize="@dimen/_16_dp"
                            android:textStyle="normal"

                            />
                    </androidx.constraintlayout.widget.ConstraintLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/terms_location_layout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@null"
                android:layout_marginTop="15dp"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                >

                <CheckBox
                    android:id="@+id/save_id_cb"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:button="@drawable/cb_info"
                    android:gravity="center"
                    app:layout_constraintHorizontal_weight="0.1"
                    app:layout_constraintTop_toTopOf="@+id/save_id_tv"
                    app:layout_constraintBottom_toBottomOf="@+id/save_id_tv"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/save_id_tv"
                    />

                <TextView
                    android:id="@+id/save_id_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/save_id"
                    android:textColor="@color/color_42413e_btn"
                    android:textSize="15dp"
                    android:gravity="center_vertical"
                    app:layout_constraintHorizontal_weight="0.7"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/save_id_cb"
                    app:layout_constraintEnd_toStartOf="@+id/search_id_tv"
                    />

                <TextView
                    android:id="@+id/search_id_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="right|center_horizontal"
                    android:text=""
                    android:textColor="@color/color_42413e_btn"
                    android:textSize="15dp"
                    app:layout_constraintHorizontal_weight="0.2"
                    app:layout_constraintTop_toTopOf="@+id/save_id_tv"
                    app:layout_constraintBottom_toBottomOf="@+id/save_id_tv"
                    app:layout_constraintStart_toEndOf="@+id/save_id_tv"
                    app:layout_constraintEnd_toEndOf="parent"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/test_btn_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_layout"
            android:layout_centerInParent="true"
            android:visibility="gone">

            <Button
                android:id="@+id/test_btn_1"
                android:layout_width="@dimen/_100_dp"
                android:layout_height="@dimen/_50_dp"
                android:text="Test1" />

            <Button
                android:id="@+id/test_btn_2"
                android:layout_width="@dimen/_100_dp"
                android:layout_height="@dimen/_50_dp"
                android:text="Test2"
                android:visibility="gone" />

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/login_info"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_marginTop="3dp"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintVertical_weight="0.1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/login_layout">

            <ImageView
                android:id="@+id/intro_help_image"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintHorizontal_weight="0.1"
                app:layout_constraintEnd_toStartOf="@+id/helpdesk_id_tv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/helpdesk_id_tv"
                app:layout_constraintBottom_toBottomOf="@+id/helpdesk_id_tv"
                app:srcCompat="@drawable/bg_login_ico" />

            <TextView
                android:id="@+id/helpdesk_id_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="HELP DESK:02-2262-1241"
                android:textColor="@color/color_ffffff"
                android:textSize="15dp"
                android:textStyle="normal"
                android:layout_marginLeft="10dp"
                app:layout_constraintHorizontal_weight="0.7"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/user_device_type"
                app:layout_constraintStart_toEndOf="@+id/intro_help_image"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/user_device_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="폰모드"
                android:textColor="@color/color_ffffff"
                android:textSize="15dp"
                android:visibility="visible"
                android:gravity="center"
                app:layout_constraintHorizontal_weight="0.2"
                app:layout_constraintBottom_toBottomOf="@+id/helpdesk_id_tv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/helpdesk_id_tv"
                app:layout_constraintTop_toTopOf="@+id/helpdesk_id_tv" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <!-- 버튼 눌렀을 때 풍선 모양 효과 처리할 공간 -->
    <RelativeLayout
        android:id="@+id/keypadBallon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:id="@+id/bottom_keyboard_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-2dp"
            android:background="@null">

            <!-- 키 패드 Navi Bar를 넣으려면 -->
            <include
                android:id="@+id/keypadNaviBar"
                layout="@layout/transkey_user_navibar2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/keypadContainer"
                android:visibility="invisible" />

            <!-- 키 패드가 들어갈 공간 -->
            <FrameLayout
                android:id="@+id/keypadContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"></FrameLayout>

        </RelativeLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
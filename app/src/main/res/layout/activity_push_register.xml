<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:clickable="true"
    android:orientation="vertical">

    <TextView
        android:id="@+id/register_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:text="회원 등록 정보"
        android:textColor="#000000"
        android:textSize="14dp" />

    <LinearLayout
        android:id="@+id/register_id_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:background="#cccccc"
            android:gravity="center"
            android:text="회원 아이디"
            android:textColor="#000000"
            android:textSize="8dp" />

        <EditText
            android:id="@+id/register_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:singleLine="true"
            android:textSize="10dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/register_mdn_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:background="#cccccc"
            android:gravity="center"
            android:text="MDN 전화번호"
            android:textColor="#000000"
            android:textSize="8dp" />

        <EditText
            android:id="@+id/register_mdn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:singleLine="true"
            android:textSize="10dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:background="#cccccc"
            android:gravity="center"
            android:text="이름"
            android:textColor="#000000"
            android:textSize="8dp" />

        <EditText
            android:id="@+id/register_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:singleLine="true"
            android:textSize="10dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/register_pw_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:background="#cccccc"
            android:gravity="center"
            android:text="비밀번호"
            android:textColor="#000000"
            android:textSize="8dp" />

        <EditText
            android:id="@+id/register_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:password="true"
            android:singleLine="true"
            android:textSize="10dp" />
    </LinearLayout>

    <Button
        android:id="@+id/register_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:text="회원 등록"
        android:textSize="8dp" />

    <Button
        android:id="@+id/register_close_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:text="닫기"
        android:textSize="10dp" />
</LinearLayout>
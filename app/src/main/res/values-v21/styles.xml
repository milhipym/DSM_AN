<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <!-- toolbar 사용시 actionbar 비활성화 -->
    <style name="AppTheme.NoActionBar" parent="@style/Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- 웹뷰 테마 -->
    <style name="AppTheme" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/color_009881</item>
        <item name="colorPrimaryDark">@color/color_009881</item>
        <item name="colorAccent">@color/color_009881</item>
        <item name="android:statusBarColor">@color/color_ffffff</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!-- 로그인 테마 -->
    <style name="AppTheme.LOGIN" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/color_009881</item>
        <item name="colorPrimaryDark">@color/color_009881</item>
        <item name="colorAccent">@color/color_009881</item>
        <item name="android:statusBarColor">@color/color_ffffff</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Log" parent="AppTheme">
        <item name="android:typeface">monospace</item>

        <item name="android:padding">@dimen/margin_medium</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
    </style>

    <!-- 팝업 다이얼로그 테마 -->
    <style name="popup_custom_theme" parent="AppTheme">
        <item name="android:windowBackground">@color/color_20000000</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- 반투명한 배경 -->
    <style name="Theme.Opacity" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowNoTitle">true</item>
        <!--<item name="android:windowIsFloating">true</item>-->
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- 투명한 배경 -->
    <style name="Theme.Transparent" parent="AppTheme.LOGIN">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowNoTitle">true</item>
        <!--<item name="android:windowIsFloating">true</item>-->
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- AlertDialog 전체화면 -->
    <style name="DialogTheme_FullScreen" parent="android:Theme.Dialog">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>

        <item name="android:padding">0dip</item>
        <item name="android:layout_margin">0dip</item>

        <!-- No backgrounds, titles or window float -->
        <item name="android:windowBackground">@color/color_ffffff</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

